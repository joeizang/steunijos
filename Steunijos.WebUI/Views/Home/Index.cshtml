<!-- Modal to show all journals  -->
@{
    <div id="showJournaldiv" class="modal fade">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" style="margin: 0 auto;">
                        Download Journals
                    </h4>
                    <button class="close" data-dismiss="modal">&times;</button>
                </div>
                <div id="modalTarget" class="modal-body">
                    <div class="container-fluid">
                        <div class="row">


                            <div class="card-deck">
                                @{
                                    var actualFileName = string.Empty;
                                    var anchorId = string.Empty;
                                    foreach (var journal in Model)
                                    {
                                        <div id="modal-placeholder" style="display: none;">
                                            @actualFileName = @System.IO.Path.GetFileName(journal.ActualFileName)
                                            @anchorId = journal.VolumeName;
                                        </div>
                                        <div class="card">
                                            <img src="~/img/acrobatPdf.jpg" alt="" class="card-img-top">
                                            <div class="card-body">
                                                <small>@journal.JournalId</small>
                                                <h5 id="volName" class="card-title">@journal.VolumeName</h5>
                                                <p id="issnNo" class="card-text">@journal.IssnNo</p>
                                                <p class="card-text">@journal.CopyrightYear</p>
                                                <span id="plinks" style="display: none;"></span>
                                                <a class="btn btn-primary btn-circle float-right"
                                                   asp-controller="Home"
                                                   asp-action="DownloadJournals" ,
                                                   asp-route-VolumeName="@journal.VolumeName"
                                                   asp-route-JournalId="@journal.JournalId"
                                                   data-toggle="tooltip"
                                                   data-placement="right"
                                                   title="download journal"
                                                   id="cardLink">
                                                    <i class="fa fa-file-download fa-3x"></i>
                                                </a>
                                            </div>
                                            <div class="card-footer">
                                                <small class="text-muted">Added On: @journal.CreatedAt</small>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
}
