            <div class="row">
                <div class="col-md-8">

                    <form asp-controller="Papers" asp-action="SubmitPaper" enctype="multipart/form-data" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="SubjectArea" class="control-label"></label>
