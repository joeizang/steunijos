                            </select>
                            @* @Html.DropDownListFor(drop => drop.SubjectArea, 
                            new SelectList(Model.SubjectArea, "Value", "Text"), new { @class="form-control" }) *@
                            <span asp-validation-for="SubjectArea" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
