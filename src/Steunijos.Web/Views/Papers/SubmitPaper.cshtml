@model Steunijos.Web.ViewModels.Paper.SubmitPaper

@{
    ViewData["Title"] = "SubmitPaper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="section">
        <div class="row justify-content-center mb-4" style="margin-top: 30px;">
            <div class="col-md-8 col-lg-6 text-center">
                <h2 class="section-title mb-2">Submit Your Paper.</h2>
            </div>
        </div>
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-md-8">

                    <form asp-controller="Papers" asp-action="SubmitPaper" enctype="multipart/form-data" 
                          method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @*<div class="form-group">
                            <label asp-for="SubjectAreaSelected" class="control-label"></label>
                            <select asp-for="SubjectAreaSelected" 
                                asp-items="Model.SubjectArea" class="form-control">
                            </select>
                            <span asp-validation-for="SubjectArea" class="text-danger"></span>
                        </div>*@
                        @* <span class="text-danger">@ViewBag.ErrorMessage</span>
                        <span class="alert alert-success">@ViewBag.Message</span> *@
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control formcontrolste rounded" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Author" class="control-label"></label>
                            <input asp-for="Author" class="form-control formcontrolste rounded" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label class="control-label">Upload Paper</label>
                            <input asp-for="File" type="file" name="file" class="form-control formcontrolste rounded" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Upload" class="btn btn-primary" style="font-weight: bold; font-size: large;"/>
                            <p id="form-inform" class="d-inline">
                                <ul>
                                    <li class="text-info text-capitalize text-lg-right" style="list-style: none;">
                                        Papers should be one Word document in format 2007-2019 (.docx)
                                    </li>
                                    <li class="text-info text-capitalize text-lg-right" style="list-style: none;">
                                        Every Word document should not be more than 5MB in size!
                                    </li>
                                    <li class="text-danger text-capitalize text-lg-right" style="list-style: none;">
                                        Any other document type will not upload!
                                    </li>
                                </ul>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
<div>
